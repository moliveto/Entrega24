<div class="min-vh-100 d-flex flex-column justify-content-center py-4">
    <div class="row justify-content-center ">
        <div class="col-md-6 col-lg-4">
            {{#if error}}
            <div class="alert alert-warning">
                {{error}}
            </div>
            {{/if}}
            <div class="">
                <div class="card">
                    <div class="card-body">
                        <form action="/api/users/resetpassword" method="POST" class="">
                            <input id="token" name="token" type="hidden" value="{{token}}">
                            <div class="row gy-3">
                                <div class="col-12">
                                    <h3 class="text-center mb-4">Recuperar Contraseña</h3>
                                </div>
                                <div class="col-12">
                                    <label for="email" class="form-label">Correo</label>
                                    <input type="email" name="email" id="email" class="form-control"
                                        placeholder="introduzca su correo electronico" required>
                                </div>
                                <div class="col-12">
                                    <div class="d-grid">
                                        <button class="btn btn-primary" type="submit">Resetear Contraseña</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>