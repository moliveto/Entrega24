<div class="row justify-content-center">
    <div class="col-12 col-lg-12">
        <h4>Órdenes de compra:</h4>
        {{#if orders}}
            <div class="card mb-3">
                <div class="card-body">
                    <table class="table table-hover text-nowrap table-borderless mb-0">
                        <thead>
                            <tr class="">
                                <th class="w-100">Id usuario</th>
                                <th class="">Dirección de entrega</th>
                                <th class="">Correo</th>
                                <th class="">Productos</th>
                                <th class="">Estado</th>
                                <th class="">Fecha y hora</th>
                                <th class="text-end"># de orden</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each orders}}
                            <tr class="">
                                <td class="">{{this.buyer}}</td>
                                <td class="">{{this.delivery_address}}</td>
                                <td class="">{{this.email}}</td>
                                <td class="">
                                    {{#each products}}
                                    <div class="d-flex justify-content-between">{{this.title}} ({{this.quantity}} x ${{this.price}} ) = <span>${{this.total}}</span></div>
                                    {{/each}}
                                </td>
                                <td class=""><span class="fw-semibold text-success-emphasis bg-success-subtle rounded-3 px-2 py-1">{{this.status}}</span></td>
                                <td class="">{{timeFormat 'lll' this.createdAt}}</td>
                                <td class="text-end">{{this.order_number}}</td>
                                <td class="text-end fw-semibold">${{this.total}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{else}}
            <div class="alert alert-info" role="alert">
                No hay ordenes para mostrar
            </div>
        {{/if}}
    </div>
</div>
